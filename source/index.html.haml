#top

#welcome.block
  .container
    %h1 Amandas portfolio
    %img.top(src="/images/loggav.png")
    %h5 I'm a mid twenties professional book lover and junior developer.

#education.block
  .container
    %i.symbol.fa.fa-graduation-cap.fa-5x{"aria-hidden" => "true"}
    - data.education.each do |education|
      %h3.padding= education[:school]
      %h5= education[:course]
      %a{:href => "#{education[:link]}", :target => "_blank"} Website
      %p= education[:time]
      %p= education[:description]
      %p= education[:second]
      %p= education[:third]

#work.block
  .container
    %i.symbol.fa.fa-briefcase.fa-5x{"aria-hidden" => "true"}
    - data.work.each do |work|
      %h3.padding= work[:work]
      %h5= work[:time]
      %a{:href => "#{work[:link]}", :target => "_blank"} Website
      %p.bodys= work[:skills]
      %p= work[:description]
      %p= work[:description2]

